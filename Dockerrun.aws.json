{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "smartdockerimage/fib-client",
      "hostname": "client",
      "essential": false,
      "memory": 128,
      "option_settings" :
       [
         {
          "Namespace": "aws:elasticbeanstalk:command",
          "OptionName": "Timeout",
          "Value": "3600"
         }
       ],
      "command": [
        "tail",
        "-f",
        "/bin/bash"
      ]
    },
    {
      "name": "server",
      "image": "smartdockerimage/fib-server",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "option_settings" :
       [
         {
          "Namespace": "aws:elasticbeanstalk:command",
          "OptionName": "Timeout",
          "Value": "3600"
         }
       ],
      "command": [
        "tail",
        "-f",
        "/bin/bash"
      ]
    }, 
    {
      "name": "worker",
      "image": "smartdockerimage/fib-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128,
      "option_settings" :
       [
         {
          "Namespace": "aws:elasticbeanstalk:command",
          "OptionName": "Timeout",
          "Value": "3600"
         }
       ],
      "command": [
        "tail",
        "-f",
        "/bin/bash"
      ]
    },
    {
      "name": "nginx",
      "image": "smartdockerimage/fib-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [ "client", "server" ],
      "memory": 128,
      "option_settings" :
       [
         {
          "Namespace": "aws:elasticbeanstalk:command",
          "OptionName": "Timeout",
          "Value": "3600"
         }
       ],
      "command": [
        "tail",
        "-f",
        "/bin/bash"
      ]
    }
  ]
}