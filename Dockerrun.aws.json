{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "smartdockerimage/fib-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "smartdockerimage/fib-server",
      "hostname": "api",
      "essential": false
    }, 
    {
      "name": "worker",
      "image": "smartdockerimage/fib-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "smartdockerimage/fib-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [ "client", "server" ]
    }
  ]
}